{
    "name": "smithy-vscode",
    "icon": "res/icon.png",
    "displayName": "Smithy",
    "description": "Smithy IDL syntax highlighting",
    "version": "0.3.1",
    "publisher": "pepri",
    "engines": {
        "vscode": "^1.32.0"
    },
    "repository": "https://github.com/pepri/smithy-vscode.git",
    "license": "Apache-2.0",
    "categories": [
        "Programming Languages"
    ],
    "preview": true,
    "contributes": {
        "languages": [
            {
                "id": "smithy",
                "aliases": [
                    "Smithy",
                    "smithy"
                ],
                "extensions": [
                    ".smithy"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "smithy",
                "scopeName": "source.smithy",
                "path": "./syntaxes/smithy.tmLanguage"
            }
        ]
    },
    "scripts": {
        "install-plugin": "vsce package -o smithy-vscode-test.vsix && code --install-extension smithy-vscode-test.vsix"
    },
    "devDependencies": {
        "@types/node": "^10.12.12",
        "@types/vscode": "^1.32.0",
        "typescript": "^3.1.3",
        "vsce": "^1.75.0",
        "vscode-nls-dev": "^3.3.1",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "vscode-nls": "^3.2.4"
    }
}
